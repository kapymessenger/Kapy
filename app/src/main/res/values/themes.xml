<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kapy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#EBAE31</item>
        <item name="colorPrimaryVariant">#EB7F31</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#E0602F</item>
        <item name="colorSecondaryVariant">#E0602F</item>
        <item name="colorOnSecondary">#E0602F </item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#EB7F31</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Kapy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ButtonStyle">
        <item name="cornerRadius">10sp</item>
        <item name="android:layout_width">150sp</item>
        <item name="android:layout_height">48sp</item>
    </style>

    <style name="RegisterEditTextStyle">
        <item name="android:textColor">#5B5B5B</item>

        <item name="cornerRadius">25sp</item>
        <item name="android:background">@drawable/rounder_edittext</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColorHint">#A8A8A8</item>
    </style>

    <style name="Theme.Kapy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Kapy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>