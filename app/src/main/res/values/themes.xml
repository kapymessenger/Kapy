<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kapy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#CC00ED</item>
        <item name="colorPrimaryVariant">#CC00ED</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#005550</item>
        <item name="colorSecondaryVariant">#005550</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#CC00ED</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Kapy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ButtonStyle">
        <item name="cornerRadius">80sp</item>
        <item name="android:layout_width">150sp</item>
    </style>

    <style name="Theme.Kapy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Kapy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>