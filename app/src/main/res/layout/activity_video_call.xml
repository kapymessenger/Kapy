<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.calls.VideoCallActivity">

    <FrameLayout
        android:id="@+id/remote_video_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/local_video_container"
        android:layout_width="160dp"
        android:layout_height="248dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/defaultBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/micro_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:contentDescription="@string/button"
            android:scaleType="centerInside"
            android:src="@drawable/mic_icon"
            tools:ignore="RedundantDescriptionCheck" />

        <ImageView
            android:id="@+id/phone_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:contentDescription="@string/button"
            android:scaleType="centerInside"
            android:src="@drawable/phone_icon"
            tools:ignore="RedundantDescriptionCheck" />

        <ImageView
            android:id="@+id/video_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:contentDescription="@string/button"
            android:scaleType="centerInside"
            android:src="@drawable/videocam_icon"
            tools:ignore="RedundantDescriptionCheck" />

        <ImageView
            android:id="@+id/switch_camera_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:contentDescription="@string/button"
            android:scaleType="centerInside"
            android:src="@drawable/switch_camera_icon"
            tools:ignore="RedundantDescriptionCheck" />

    </LinearLayout>
</RelativeLayout>