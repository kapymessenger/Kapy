<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/chat_layout_inflater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/another_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/another_message"
                android:padding="20dp"
                android:text="another msg" />

            <TextView
                android:id="@+id/another_msg_date"
                android:layout_width="match_parent"
                android:textAlignment="textStart"
                android:layout_marginStart="5dp"
                android:textSize="11sp"
                android:layout_height="wrap_content"
                android:text="creation date / time" />

            <TextView
                android:id="@+id/another_msg_metadata"
                android:layout_width="match_parent"
                android:textAlignment="textStart"
                android:layout_marginStart="3dp"
                android:paddingStart="2dp"
                android:textSize="10sp"
                android:layout_height="wrap_content"
                android:text="Generated with AI"
                tools:ignore="SmallSp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/self_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/self_message"
                android:padding="20dp"
                android:text="my msg" />

            <TextView
                android:id="@+id/self_msg_date"
                android:layout_width="match_parent"
                android:textAlignment="textEnd"
                android:layout_marginEnd="5dp"
                android:textSize="11sp"
                android:layout_height="wrap_content"
                android:text="creation date / time" />

            <TextView
                android:id="@+id/self_msg_metadata"
                android:layout_width="match_parent"
                android:textAlignment="textEnd"
                android:layout_marginEnd="3dp"
                android:paddingEnd="2dp"
                android:textSize="10sp"
                android:layout_height="wrap_content"
                android:text="Generated with AI"
                tools:ignore="SmallSp" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>